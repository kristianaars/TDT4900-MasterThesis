<UserControl
    x:Class="TDT4900_MasterThesis.View.ConfigurationControl.SquareGridHierarchicalGraphConfigurationControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:configuration="clr-namespace:TDT4900_MasterThesis.ViewModel.Configuration"
    xmlns:controls="clr-namespace:TDT4900_MasterThesis.View.Controls"
    xmlns:vm="clr-namespace:TDT4900_MasterThesis.ViewModel"
    HorizontalAlignment="Stretch">
    <StackPanel HorizontalAlignment="Stretch" Spacing="4">
        <Design.DataContext>
            <configuration:SquareGridHierarchicalGraphConfigurationViewModel />
        </Design.DataContext>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <controls:LabeledTextBox
                Description="Nodes in the graph"
                Label="Node Count"
                Text="{Binding NodeCount}" />

            <controls:LabeledTextBox
                Description="Number of hierarchical levels"
                Label="Levels"
                Text="{Binding HierarchicalLevels}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <controls:LabeledTextBox
                Description="Distance between nodes"
                Label="Distance"
                Text="{Binding Distance}" />

            <controls:LabeledTextBox
                Description="Noise in distance"
                Label="Noise"
                Text="{Binding Noise}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <controls:LabeledTextBox
                Description="Size of the base grid"
                Label="Base Grid Size"
                Text="{Binding BaseGridSize}" />
        </StackPanel>


    </StackPanel>



</UserControl>