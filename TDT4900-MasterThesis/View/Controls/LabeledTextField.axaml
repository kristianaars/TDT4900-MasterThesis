<UserControl
    x:Class="TDT4900_MasterThesis.View.Controls.LabeledTextField"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Spacing="4">
        <TextBlock
            HorizontalAlignment="Left"
            FontSize="14"
            Foreground="#1C1C1C"
            Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <TextBlock
            Width="{Binding Width, RelativeSource={RelativeSource AncestorType=StackPanel}}"
            HorizontalAlignment="Left"
            FontSize="10"
            Foreground="#757575"
            Text="{Binding Description, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <TextBlock
            HorizontalAlignment="Stretch"
            FontSize="12"
            Foreground="#1C1C1C"
            Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />

    </StackPanel>
</UserControl>